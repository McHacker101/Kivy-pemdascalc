#:kivy 2.0.0


<BracketButton@Button>:
    open: True


<CalcuLayout>:
    input_text: input_text

    BoxLayout:
        size: root.width*0.9, root.height*0.9
        orientation: 'vertical'
        spacing: 5
        padding: 10
        pos: root.width * 0.05, root.height * 0.05
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: input_text
            text: ""
            color: 0, 1, 0, 1
            size_hint: 1, 0.3
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        GridLayout:
            cols: 4
            size_hint: 1, 0.7
            spacing: 10
            padding: 10
            Button:
                text: "C"
                on_press: root.clear()
            BracketButton:
                text: "()"
                on_press: root.add_parenthesis(self)
            DigitButton:
                text: "%"
                symb: True
                on_press: root.input_update(self)
            DigitButton:
                text: " / "
                symb: "True"
                on_press: root.input_update(self)
            DigitButton:
                text: "7"
                on_press: root.input_update(self)
            DigitButton:
                text: "8"
                on_press: root.input_update(self)
            DigitButton:
                text: "9"
                on_press: root.input_update(self)
            DigitButton:
                text: " * "
                symb: True
                on_press: root.input_update(self)
            DigitButton:
                text:  "4"
                on_press: root.input_update(self)
            DigitButton:
                text: "5"
                on_press: root.input_update(self)
            DigitButton:
                text: "6"
                on_press: root.input_update(self)
            DigitButton:
                text: " - "
                symb: True
                on_press: root.input_update(self)
            DigitButton:
                text: "1"
                on_press: root.input_update(self)
            DigitButton:
                text: "2"
                on_press: root.input_update(self)
            DigitButton:
                text: "3"
                on_press: root.input_update(self)
            DigitButton:
                text: " + "
                symb: True
                on_press: root.input_update(self)
            Button:
                text: "+/-"
            DigitButton:
                text: "0"
                on_press: root.input_update(self)
            DigitButton:
                text: "."
                symb: True
                on_press: root.input_update(self)
            Button:
                text: "="
                on_press: root.submit()




